<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fantasyfinance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.fantasyfinance.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fantasyfinance.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.Tagline"
            android:label="@string/title_activity_tagline" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.ForgotPassword"
            android:label="@string/title_activity_forgot_password" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.FollowedStocks"
            android:label="@string/title_activity_followed_stocks" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.SearchStocks"
            android:label="@string/title_activity_search_stocks"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.PredictStocks"
            android:label="@string/title_activity_predict_stocks" >
        </activity>
        <activity
            android:name="com.example.fantasyfinance.StockInfo"
            android:label="@string/title_activity_stock_info" >
        </activity>
    </application>

</manifest>
